<div class="form-default">
  <div class="title">
    <h2>Os primeiros passos na plataforma</h2>
  </div>

  <div class="subtitle">
    <h3>1 - Informações sobre os dados para acesso</h3>
  </div>

  <hr/>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="error">
      <%= devise_error_messages! %>
    </div>

    <label>Informe seu email</label>
    <div class="field">
      <%= f.email_field :email, autofocus: true %>
    </div>

    <label>Informe sua senha, ela deve conter no mínimo 8 caracteres</label>
    <div class="field">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <label>Informe sua senha novamente para conferência</label>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Confirmar dados para acesso" %>
    </div>
  <% end %>

</div>
